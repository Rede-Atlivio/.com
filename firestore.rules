rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNÇÕES AUXILIARES (DRY) ---
    function isAdmin() {
      return request.auth.token.email == "contatogilborges@gmail.com";
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Verifica se o usuário é PRO (Baseado no documento dele)
    function isPro() {
       return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.is_pro == true;
    }

    // --- REGRAS ---

    // 1. USUÁRIOS (BLINDAGEM FINANCEIRA)
    match /usuarios/{userId} {
      allow read: if request.auth != null;
      // Criação permitida
      allow create: if isOwner(userId);
      // Atualização: PERMITIDA, DESDE QUE NÃO MEXA NO SALDO OU STATUS PRO
      allow update: if isOwner(userId) 
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['saldo', 'is_pro']));
    }

    // 2. MISSÕES
    match /missoes/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // 3. OPORTUNIDADES (LÓGICA FEED PRO)
    match /oportunidades/{document=**} {
      // Se for Admin ou PRO: Lê tudo.
      // Se for Free: Só lê se criado há mais de 5 minutos.
      allow read: if request.auth != null && (
          isAdmin() || 
          isPro() || 
          resource.data.created_at < request.time - duration.value(5, 'm')
      );
      allow write: if isAdmin();
    }

    // 4. PRODUTOS
    match /produtos/{document=**} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // 5. PEDIDOS (SEGURANÇA FINANCEIRA)
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (
        resource.data.client_id == request.auth.uid || 
        resource.data.provider_id == request.auth.uid || 
        isAdmin()
      );
    }

    // 6. CHATS (SEGURANÇA DE MENSAGEM)
    match /chats/{chatId} {
      // Regra geral do documento do chat
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && (request.auth.uid in resource.data.participants || isAdmin());
      
      // Regra das mensagens (CORRIGIDA: Herda participantes do pai)
      match /messages/{msgId} {
         allow read, write: if request.auth != null && (
            request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants || isAdmin()
         );
      }
    }
    
    // 7. PRESTADORES ONLINE
    match /active_providers/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // 8. ENVIOS DE MISSÃO
    match /mission_assignments/{docId} {
      allow read: if request.auth != null && (resource.data.profile_id == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }
    
    // 9. AVALIAÇÕES
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }
  }
}
