rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES DE SEGURANÇA ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // SEU E-MAIL DE ADMIN (PODER TOTAL)
    function isAdmin() {
       return request.auth != null && request.auth.token.email.lower() == "contatogilborges@gmail.com";
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGRAS GERAIS (ADMIN ACESSA TUDO) ---
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // --- REGRAS ESPECÍFICAS (PARA O APP FUNCIONAR) ---

    // 1. USUÁRIOS
    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      // Admin pode tudo (regra global). Usuário só edita dados não-sensíveis.
      allow update: if isAuthenticated() && isOwner(userId) 
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['saldo', 'is_pro', 'is_demo'])); 
    }

    // 2. PRESTADORES ONLINE
    match /active_providers/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // 3. OPORTUNIDADES
    match /oportunidades/{opId} {
      allow read: if isAuthenticated(); // Filtro de delay feito no JS
      // Write bloqueado pelo padrão (só Admin)
    }

    // 4. MISSÕES & TAREFAS
    match /missoes/{missaoId} {
      allow read: if isAuthenticated();
    }

    match /mission_assignments/{assignId} {
      allow read: if isAuthenticated() && (resource.data.profile_id == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.profile_id == request.auth.uid;
      // Update bloqueado (só Admin aprova)
    }

    // 5. PEDIDOS (ORDERS)
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        resource.data.client_id == request.auth.uid || 
        resource.data.provider_id == request.auth.uid
      );
      allow create: if isAuthenticated() && request.resource.data.client_id == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.client_id == request.auth.uid || 
        resource.data.provider_id == request.auth.uid
      );
    }

    // 6. CHATS
    match /chats/{chatId} {
      allow create: if isAuthenticated() && (request.auth.uid in request.resource.data.participants);
      allow read, update: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      
      match /messages/{msgId} {
        allow read, write: if isAuthenticated() && (
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
        );
      }
    }
    
    // 7. LOJA E LINKS CURTOS
    match /produtos/{prodId} { allow read: if true; }
    match /short_links/{linkId} { allow read, update: if true; } // Update para contar cliques
    match /jobs/{jobId} { allow read: if true; }
    match /job_applications/{appId} { allow create: if isAuthenticated(); }
  }
}
